<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="212.0" prefWidth="151.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Main">
    <padding><Insets left="20" right="20" /></padding>
    <center>
        <VBox alignment="CENTER" spacing="30">
         <ChoiceBox fx:id="cbFirstColor" prefWidth="150.0" />
         <ColorPicker fx:id="cp" />
            <Button fx:id="btnPvP" prefWidth="300" style="-fx-background-image: url(&quot;sample/icons/player.png&quot;);" styleClass="menuButton" text="Player vs Player" />
            <Button fx:id="btnPvAIEasy" prefWidth="300" style="-fx-background-image: url(&quot;sample/icons/ai.png&quot;);" styleClass="menuButton" text="Player vs AI (easy)" />
            <Button fx:id="btnPvAIHard" prefWidth="300" style="-fx-background-image: url(&quot;sample/icons/ai.png&quot;);" styleClass="menuButton" text="Player vs AI (hard)" />
        </VBox>
    </center>
</BorderPane>
